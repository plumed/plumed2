# vim:ft=plumed

phi:   TORSION ATOMS=5,7,9,15     NOPBC
psi:   TORSION ATOMS=7,9,15,17    NOPBC

bf1: BF_FOURIER ORDER=5 MINIMUM=-pi MAXIMUM=pi
bf2: BF_FOURIER ORDER=5 MINIMUM=-pi MAXIMUM=pi
bf3: BF_FOURIER ORDER=5 MINIMUM=-pi MAXIMUM=pi

VES_LINEAR_EXPANSION ...
 ARG=phi
 BASIS_FUNCTIONS=bf1
 LABEL=ves1
 TEMP=300.0
 GRID_BINS=100
... VES_LINEAR_EXPANSION

VES_LINEAR_EXPANSION ...
 ARG=phi
 BASIS_FUNCTIONS=bf2
 LABEL=ves2
 TEMP=300.0
 GRID_BINS=100
... VES_LINEAR_EXPANSION

VES_LINEAR_EXPANSION ...
 ARG=psi
 BASIS_FUNCTIONS=bf3
 LABEL=ves3
 TEMP=300.0
 GRID_BINS=100
... VES_LINEAR_EXPANSION

# NOTE: These parameters do not reflect parameters used in real simulations! 
#       This is only for testing!
#

OPT_AVERAGED_SGD ...
  BIAS=ves1,ves2,ves3
  STRIDE=1000
  LABEL=o1
  STEPSIZE=1.0
  COEFFS_FILE=coeffs.ves1.data,coeffs.ves2.data,coeffs.ves3.data
  COEFFS_OUTPUT=1
  COEFFS_FMT=%12.6f
  GRADIENT_FILE=gradient.ves1.data,gradient.ves2.data,gradient.ves3.data
  GRADIENT_OUTPUT=1
  GRADIENT_FMT=%12.6f
  FES_OUTPUT=10
  BIAS_OUTPUT=10
  TARGETDIST_AVERAGES_FMT=%12.6f
  MONITOR_INSTANTANEOUS_GRADIENT
... OPT_AVERAGED_SGD

PRINT ...
  STRIDE=500
  ARG=phi,ves1.bias
  FILE=colvar.data FMT=%6.3f
... PRINT

ENDPLUMED

