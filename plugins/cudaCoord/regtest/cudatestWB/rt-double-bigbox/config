type=driver
# this is to test a different name
arg="--plumed plumed.dat --ixyz trajbig.xyz"

plumed_regtest_after() {
  {
    echo '#! FIELDS time parameter cpu-gpu (only shows the errors)'
    awk 'function abs(x){return(x<0.0)?-x:x} NR>1{if(abs($4-$3)){print $1, $2, $4-$3}} ' <deriv
  } >deriv_delta
}
#extra_files="../../trajectories/trajbig.xyz"
plumed_regtest_before() {
  plumed --no-mpi benchmark --natoms=40000 --nsteps=2 \
    --atom-distribution=sc --dump-trajectory=trajbig.xyz
}
